menuentry 'Microsoft Windows 11' {
    insmod part_gpt
    insmod fat
    insmod chain
    search --fs-uuid --no-floppy --set=root 4E83-23E7 # sudo blkid | grep -E "EFI|vfat"
    chainloader /EFI/Microsoft/Boot/bootmgfw.efi  # 修正路径格式
}
